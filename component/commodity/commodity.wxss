.commodity {
    margin: 0 15rpx 30rpx;
    padding-bottom: 20rpx;
}

.commodity-img {
    width: 330rpx;
    height: 300rpx;
    margin-bottom: 20rpx;
}
.commodity-name{
    width: 330rpx;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.commodity-weight {
    margin: 10rpx 0;
    font-size: 12px;
    color: #8c8c8c;
}

.commodity-price {
    position: relative;
}

.commodity-price-new {
    font-size: 13px;
    color: #FF3824;
}

.commodity-price-old {
    margin: 0 15rpx;
    text-decoration: line-through;
    font-size: 12px;
    color: #8c8c8c;
}

.commodity-cart {
    position: absolute;
    right: 20rpx;
    top: 0rpx;
    height: 35rpx;
    width: 35rpx;
    background: url('data:image/png;base64,') no-repeat 0 0/35rpx 35rpx;
}