/* 选项卡 */

.options {
    display: flex;
    padding: 0 40rpx;
    background: #fff;
}

.option {
    flex: 1;
    text-align: center;
    font-weight: 500;
    font-size: 13px;
    color: #8c8c8c;
}

.option-text {
    display: inline-block;
}

.option-on {
    border-bottom: 4rpx solid #3C93FF;
    color: #333;
}