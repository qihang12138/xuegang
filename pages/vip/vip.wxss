page {
    padding-bottom: 100rpx;
}

.header {
    position: relative;
    text-align: center;
    height: 370rpx;
    /* background: url('https://s2.ax1x.com/2019/07/31/etOFaT.png') no-repeat 0 0/750rpx 370rpx; */
}

.header-btn {
    display: inline-block;
    margin-top: 230rpx;
    padding: 10rpx 80rpx;
    border-radius: 32rpx;
    font-size: 20px;
    color: #333;
    background: #C6AB78;
}


/* 会员分类 */

.vip-type-box {
    overflow: hidden;
}

.vip-type {
    padding: 0 15rpx;
}

.vip-type-item {
    margin: 0 15rpx;
    padding: 0 10rpx;
    border-radius: 10rpx;
    text-align: center;
    width: 154rpx;
    height: 196rpx;
    border: 2rpx solid #e6e6e6;
}

.vip-type-name {
    padding-top: 20rpx;
    font-size: 14px;
    font-weight: 500;
    color: #333;
}

.vip-type-money,
.vip-type-rmb {
    font-size: 14px;
    color: #FF6950;
}

.vip-type-money {
    padding-top: 5rpx;
    font-size: 20px;
}

.vip-type-on {
    border: 2rpx solid #DD5F49;
    background: #FFF7F0;
}

.vip-type-btn {
    margin: 60rpx 30rpx 35rpx;
    padding: 15rpx 0;
    border-radius: 30rpx;
    text-align: center;
    font-size: 14px;
    color: #fff;
    background: #E3B45A;
}

.vip-type-cont {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}


/* 会员等级 */

.grade {
    padding: 80rpx 0 10rpx;
    background: url('https://s2.ax1x.com/2019/08/02/edc9L4.png') no-repeat 0 0/750rpx 370rpx;
}

.grade-tit {
    font-weight: bold;
}

.avatar {
    border-radius: 50%;
    overflow: hidden;
    margin-right: 15rpx;
    width: 80rpx;
    height: 80rpx;
}

.msg {
    padding: 40rpx 30rpx;
    margin: 0 30rpx;
    border-radius: 10rpx;
    color: #fff;
    background: url('https://s2.ax1x.com/2019/07/31/etXSYD.png')no-repeat 0/690rpx 350rpx;
}

.msg-img {
    border-radius: 50%;
    height: 80rpx;
    width: 80rpx;
}

.msg-time,
.msg-grade {
    font-size: 12px;
}

.msg-grade {
    display: inline-block;
    padding: 0 9rpx;
    border-radius: 10rpx;
    margin-left: 20rpx;
    background: #FCC543;
}

.custom-box {
    padding: 70rpx 0 0 30rpx;
}

.custom {
    opacity: 1!important;
    width: 300rpx;
}

.custom-button {
    padding: 0 8rpx;
    border-radius: 15rpx;
    font-size: 18rpx;
    color: #876226;
    background: #fff;
}

.custom-text {
    margin-top: -5rpx;
    padding-left: 15rpx;
    font-size: 18rpx;
}

.custom-num {
    padding-top: 70rpx;
    font-size: 14px;
    color: #876226;
}


/* 会员特权 */

.privilege {
    margin: 20rpx 0;
}

.privilege-img {
    height: 105rpx;
    width: 105rpx;
}

.privilege-box {
    justify-content: space-around;
}

.privilege-text {
    padding: 20rpx 0 40rpx;
}

.privilege-item {
    text-align: center;
}

.privilege-btn {
    padding: 20rpx 0;
    text-align: center;
    border-top: 1rpx solid #f5f5f5;
}

.btn-left {
    border-left: 1rpx solid #f5f5f5;
}