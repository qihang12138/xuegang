<view class="header">
    <view class="header-btn">¥100元立即开通</view>
</view>
<!-- 会员分类 -->
<view class="bg-fff vip-type-box">
    <view class="p30">会员分类</view>
    <view class="vip-type flex-box">
        <block wx:for="{{vip.vip_lot}}" wx:key="{{index}}">
            <view class="vip-type-item">
                <view class="vip-type-name">{{item.name}}</view>
                <view class="vip-type-money">
                    <text class="vip-type-rmb">¥</text>
                    {{item.price}}
                </view>
                <view class="vip-type-cont font-12 color-8c">充{{item.price}}送{{item.complimentary}}享受{{item.discount}}折优惠</view>
            </view>
        </block>
    </view>
    <view class="vip-type-btn">立即开通</view>
</view>
<!-- 会员特权 -->
<view class="privilege bg-fff">
    <view class="p30">会员特权</view>
    <view class="flex-box privilege-box">
        <block wx:for="{{vip.privilege}}" wx:key="{{index}}">
            <view class="privilege-item">
                <image class="privilege-img" src="{{item.image}}" />
                <view class="privilege-text">{{item.name}}</view>
            </view>
        </block>
    </view>
    <view class="flex-box">
        <navigator url="" class="flex-item privilege-btn ">会员服务协议</navigator>
        <navigator url="" class="flex-item privilege-btn btn-left">会员规则</navigator>
    </view>
</view>

