<view class="vip box-sizing" wx:if="{{ vipShow }}">
  <view class="vip-tit">¥100元立即开通</view>
  <view class="vip-text">开通年费会员享受最优惠的价格</view>
</view>
<view class="commoditys">
  <block wx:for="{{pageData}}" wx:key="index">
    <commodity src="{{item.g_image}}" name="{{item.g_name}}" weight="{{item.g_amount}}" priceNew="{{item.g_xprice}}" priceOld="{{item.g_yprice}}" bindtap="retail" data-gid="{{item.gid}}"></commodity>
  </block>
</view>