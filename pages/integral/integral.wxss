.header {
    position: relative;
    padding-top: 80rpx;
    text-align: center;
    width: 750rpx;
    height: 260rpx;
    font-size: 14px;
    color: #fff;
    background: url('https://s2.ax1x.com/2019/07/17/ZLoEWD.png') no-repeat 0 0 /750rpx 340rpx;
}

.header-rule {
    position: absolute;
    right: 30rpx;
    top: 30rpx;
}

.header-num {
    font-size: 35px;
}

.header-sign {
    position: absolute;
    top: 140rpx;
    right: 30rpx;
    padding: 5rpx 30rpx;
    border-radius: 25rpx;
    color: #3C93FF;
    background: #fff;
}


/* 标签页 */

.tabs-box {
    margin-top: -100rpx;
    padding: 0 30rpx;
}

.tab-active {
    color: #3C93FF!important;
}

.tab-detail {
    position: relative;
    padding: 30rpx 45rpx;
    font-size: 14px;
    color: #333;
}

.tab-time {
    padding-top: 10rpx;
    font-size: 12px;
    color: #8c8c8c;
}

.tab-num {
    position: absolute;
    top: 50rpx;
    right: 45rpx;
    font-weight: 500;
    color: #FD1200;
}


/* 无记录提示 */

.tab-detail,
.hint {
    padding-bottom: 200rpx;
}

.hint {
    padding-top: 30rpx;
    text-align: center;
    color: #8c8c8c;
}