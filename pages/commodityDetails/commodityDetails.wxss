page {
    background: #f5f5f5;
}

.swiper,
.slide-image {
    height: 750rpx;
    width: 750rpx;
}


/* 商品简介 */

.brief {
    position: relative;
    padding: 30rpx 30rpx 20rpx;
    background: #fff;
}

.brief-name {
    font-weight: 500;
    font-size: 14px;
    color: #333;
}

.brief-price {
    display: flex;
    align-items: center;
    padding: 20rpx 0;
}

.brief-price-new {
    font-size: 17px;
    font-weight: 800;
    color: #FF3824;
}

.brief-price-old {
    font-size: 13px;
    text-decoration: line-through;
    color: #8c8c8c;
}

.brief-info {
    display: flex;
    font-size: 13px;
    color: #8c8c8c;
}

.brief-info-express,
.brief-info-surplus,
.brief-info-sold {
    flex: 1;
}

.brief-info-surplus {
    text-align: center;
}

.brief-info-sold {
    text-align: right;
}

.brief-collect {
    position: absolute;
    top: 47rpx;
    right: 30rpx;
    padding-top: 34rpx;
    font-size: 12px;
    color: #333;
    background: url('data:image/png;base64,') no-repeat center 0/26rpx 26rpx;
}


/* 优惠 */

.discounts {
    display: flex;
    position: relative;
    margin: 14rpx 0;
    padding: 30rpx;
    background: #fff;
}

.discounts-box {
    flex: 1;
    overflow: hidden;
    white-space: nowrap;
    font-size: 0
}

.discounts-tit {
    display: inline-block;
    margin-right: 20rpx;
    font-size: 14px;
    color: #8c8c8c;
}

.discounts-tickets {
    display: inline-block;
    border-radius: 13rpx;
    margin-right: 25rpx;
    padding: 0 12rpx;
    font-size: 12px;
    color: #ff3824;
    background: rgba(255, 56, 36, .15);
}

.discounts-ticket {
    display: inline-block;
    margin-right: 10rpx;
    padding: 0 10rpx;
    font-size: 12px;
    color: #ff3824;
    border: 1rpx solid #ff3824;
}

.discounts-get {
    padding-left: 20rpx;
    width: 76rpx;
    font-size: 14px;
    color: #bfbfbf;
}

.discounts-get::after {
    content: '';
    position: absolute;
    top: 40rpx;
    right: 20rpx;
    width: 20rpx;
    height: 20rpx;
    border-top: 4rpx solid #ddd;
    border-right: 4rpx solid #ddd;
    transform: rotate(45deg);
}


/* 选项卡 */

.option-pad {
    padding: 37rpx 0;
}


/* 底部 */

.footer {
    display: flex;
    position: fixed;
    bottom: 0;
    left: 0;
    height: 100rpx;
    width: 750rpx;
}

.footer-service,
.footer-cart {
    width: 100rpx;
    text-align: center;
    font-size: 12px;
    color: #8c8c8c;
}

.footer-service {
    background: url('data:image/png;base64,') no-repeat center 22rpx/32rpx 32rpx #fff;
}

.footer-nav {
    padding: 66rpx 0 16rpx;
}

.footer-cart {
    padding: 0;
    background: url('data:image/png;base64,') no-repeat center 22rpx/32rpx 32rpx #fff;
}

.footer-add,
.footer-buy {
    flex: 1;
    text-align: center;
    line-height: 100rpx;
    font-size: 15px;
    color: #fff;
}

.footer-add {
    background: #FE976A;
}

.footer-buy {
    background: #FE4543;
}