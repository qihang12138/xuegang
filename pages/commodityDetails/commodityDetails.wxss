.swiper,
.slide-image {
    height: 750rpx;
    width: 750rpx;
}


/* 商品简介 */

.brief {
    position: relative;
    padding: 30rpx 30rpx 20rpx;
    background: #fff;
}

.brief-name {
    min-height: 32rpx;
    padding-right: 150rpx;
    word-break: break-all;
    font-weight: 500;
    font-size: 14px;
    color: #333;
}

.brief-price {
    display: flex;
    align-items: center;
    padding: 20rpx 0;
}

.brief-price-new {
    padding-right: 15rpx;
    font-size: 17px;
    font-weight: 800;
    color: #FF3824;
}

.brief-price-old {
    font-size: 13px;
    text-decoration: line-through;
    color: #8c8c8c;
}

.brief-info {
    display: flex;
    font-size: 13px;
    color: #8c8c8c;
}

.brief-info-express,
.brief-info-surplus,
.brief-info-sold {
    flex: 1;
}

.brief-info-surplus {
    text-align: center;
}

.brief-info-sold {
    text-align: right;
}

.brief-collect {
    position: absolute;
    top: 47rpx;
    right: 30rpx;
    text-align: center;
    font-size: 12px;
    color: #333;
}

.brief-collect-img {
    height: 23rpx;
    width: 26rpx;
}


/* 优惠 */

.discounts {
    margin: 20rpx 0;
    background: #fff !important;
    align-items: center !important;
    white-space: nowrap;
}

.discounts-tit {
    margin-right: 20rpx;
    font-size: 14px;
    color: #8c8c8c;
}

.discounts-tickets {
    border-radius: 13rpx;
    margin: 0 15rpx;
    padding: 0 12rpx;
    font-size: 12px;
    color: #ff3824;
    background: rgba(255, 56, 36, .15);
}

.discounts-ticket {
    margin-right: 10rpx;
    padding: 0 10rpx;
    font-size: 12px;
    color: #ff3824;
    border: 1rpx solid #ff3824;
}

.discounts-get {
    flex: 1;
    text-align: right;
    padding-left: 20rpx;
    width: 76rpx;
    font-size: 14px;
    color: #bfbfbf;
}


/* 标签 */

.tabs {
    margin-bottom: 200rpx;
}


/* 评价 */

.evaluate-tit {
    margin-top: 20rpx;
}

.evaluate-img {
    padding-right: 20rpx;
    border-radius: 50%;
    height: 80rpx;
    width: 80rpx;
}

.evaluate-cont {
    padding: 0 38rpx;
    font-size: 14px;
}

.evaluate-time {
    padding: 25rpx 38rpx;
    text-align: right;
    font-size: 12px;
    color: #8c8c8c;
}


/* 底部 */

.footer {
    z-index: 10;
}


/* 优惠券 */

.coupons {
    height: 500rpx;
}

.ticket-box {
    padding-bottom: 100rpx;
}

.ticket-tit {
    padding: 40rpx 0 80rpx;
    text-align: center;
}

.ticket {
    display: flex;
    align-items: center;
    padding-left: 30rpx;
    margin: 0 auto 20rpx;
    height: 154rpx;
    width: 660rpx;
    color: #FF3824;
    background: url('https://s2.ax1x.com/2019/07/19/ZvDnoQ.png') no-repeat 0/690rpx 154rpx;
}

.ticket-money {
    display: inline-block;
    padding-right: 10rpx;
    font-size: 18px;
    font-weight: 500;
}

.ticket-left {
    flex: 1;
    font-size: 12px;
}

.ticket-right {
    line-height: 154rpx;
    height: 154rpx;
    width: 204rpx;
    text-align: center;
    font-size: 14px;
}


/* 购物车 */

.cart {
    padding-bottom: 150rpx;
}

.cart-name {
    word-break: break-all;
    font-size: 14px;
}

.cart-img {
    margin: 0 35rpx 30rpx 0;
    border: 1px solid #f5f5f5;
    height: 236rpx;
    flex: 0 0 236rpx;
    box-sizing: border-box;
}

.cart-specs {
    height: 200rpx;
}

.cart-spec {
    display: inline-block;
    margin: 25rpx 15rpx 0 0;
    padding: 10rpx 30rpx;
    border: 1rpx solid #f5f5f5;
    text-align: center;
    min-width: 135rpx;
    background: #f5f5f5;
}

.spec-on {
    border-color: #FF3824;
    color: #FF3824;
    background: #fff;
}

.cart-num {
    padding-top: 30rpx;
}