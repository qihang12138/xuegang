/* 公用 */

.public {
    color: #333;
    background: #fff;
}

.line {
    font-size: 14px;
}

.line-right {
    flex: 1;
    text-align: right;
    color: #8c8c8c;
}

.line-text {
    padding-left: 10rpx;
    color: #8c8c8c;
}

.tit,
.line {
    padding: 20rpx 30rpx;
    border-bottom: 1rpx solid #f5f5f5;
}

.msg {
    padding: 25rpx 0;
    font-size: 14px;
    color: #333;
}

.line,
.pick {
    display: flex;
    align-items: center;
}


/* 取货信息 */

.pick {
    padding: 8rpx 30rpx 0;
}

.pick-code {
    padding-left: 20rpx;
    height: 36rpx;
    width: 36rpx;
    background: url('data:image/png;base64,') no-repeat right center/36rpx 36rpx;
}


/* 自提站点 */

.site {
    margin: 10rpx 0;
}

.tel {
    color: #3C93FF;
}


/* 费用详情 */

.cost {
    padding-bottom: 35rpx;
}


/* 备注 */

.remark {
    margin: 20rpx 0;
}

.remark-text {
    padding: 20rpx 30rpx;
    font-size: 14px;
    color: #8c8c8c;
}


/* 实付款 */

.payment {
    display: flex;
    padding: 35rpx 30rpx;
    margin-bottom: 100rpx;
    font-size: 15px;
    color: #333;
    background: #fff;
}

.payment-text {
    flex: 1;
    text-align: right;
    color: #FF3824;
}