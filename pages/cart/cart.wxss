page {
    background: #f5f5f5;
}


/* 商品 */

.commodity {
    display: flex;
    position: relative;
    padding: 30rpx;
    font-size: 14px;
    font-weight: 500;
    background: #fff;
}

.commodity-img {
    margin: 0 25rpx 0 18rpx;
    border-radius: 10rpx;
    height: 138rpx;
    width: 138rpx;
}

.commodity-checkbox {
    padding-top: 20rpx;
}

.commodity-name {
    padding: 10rpx 0;
}

.commodity-price,
.footer-price {
    color: #FF3824;
}

.commodity-stepper {
    position: absolute;
    right: 30rpx;
    top: 110rpx;
}


/* 底部 */

.footer {
    display: flex;
    align-items: center;
    position: fixed;
    bottom: 0;
    left: 0;
    height: 98rpx;
    width: 750rpx;
}

.footer-all {
    padding: 0 30rpx;
}

.footer-total {
    flex: 1;
    text-align: right;
}

.footer-balance {
    text-align: center;
    line-height: 98rpx;
    width: 270rpx;
    font-size: 15px;
    color: #fff;
    background: #FE4543;
}