page {
    padding-bottom: 150rpx;
}


/* 商品 */

.commodity {
    display: flex;
    position: relative;
    border-top: 1rpx solid #f5f5f5;
    padding: 30rpx;
    font-size: 14px;
    font-weight: 500;
    background: #fff;
}

.commodity-img {
    margin: 0 25rpx 0 18rpx;
    border-radius: 10rpx;
    height: 138rpx;
    width: 138rpx;
}

.commodity-name {
    padding: 10rpx 0;
}

.commodity-price,
.footer-price {
    color: #FF3824;
}

.commodity-stepper {
    position: absolute;
    right: 30rpx;
    top: 110rpx;
}


/* 底部 */

.footer {
    padding-top: 7rpx;
    margin-left: 30rpx;
}

.del {
    margin-left: 20rpx;
}