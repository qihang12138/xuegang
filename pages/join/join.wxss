page {
    background: #f7f7f7;
}


/* 选项卡 */

.option-pad {
    padding: 25rpx 0;
}

.option-wp {
    border-top: 1rpx solid #f7f7f7;
}


/* 提交信息 */

.msg {
    margin-top: 20rpx;
    background: #fff;
}

.msg-item {
    display: flex;
    padding: 35rpx 30rpx;
    border-bottom: 1rpx solid #f7f7f7
}

.msg-key {
    padding-right: 40rpx;
    width: 130rpx;
    text-align: center;
    font-size: 15px;
    color: #333;
}

.msg-autonym {
    position: relative;
}

.msg-autonym::after {
    content: '';
    position: absolute;
    top: 45rpx;
    right: 40rpx;
    width: 20rpx;
    height: 20rpx;
    border-top: 4rpx solid #ddd;
    border-right: 4rpx solid #ddd;
    transform: rotate(45deg);
}


/* 提示 */

.hint {
    padding: 38rpx 62rpx 52rpx;
    text-align: center;
    font-size: 12px;
    color: #8c8c8c;
}