page {
    background: #f7f7f7;
}


/* 选项卡 */

.option-pad {
    padding: 25rpx 0;
}

.option-wp {
    border-top: 1rpx solid #f7f7f7;
}


/* 提交信息 */

.msg {
    margin-top: 20rpx;
    background: #fff;
}


/* 提示 */

.hint {
    padding: 38rpx 62rpx 52rpx;
    text-align: center;
    font-size: 12px;
    color: #8c8c8c;
    box-shadow: 0px 2px 14px 2px rgba(0, 0, 0, 0.12);
}


/* 进度 */

.progress-text {
    padding: 30rpx 68rpx 150rpx;
    text-align: center;
    font-size: 12px;
    color: #8c8c8c;
}

.hint {
    padding: 120rpx 40rpx 80rpx;
    text-align: center;
    background: url('data:image/png;base64,') no-repeat center 34rpx/40rpx 40rpx;
}


/* 上传图片 */

.thumb {
    width: 180rpx;
    height: 180rpx;
    margin: 0 0 80rpx 30rpx;
}