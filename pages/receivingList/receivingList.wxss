.list {
    position: relative;
    padding: 30rpx;
    margin-bottom: 20rpx;
    font-size: 14px;
    color: #505050;
    background: #fff;
}

.list-site {
    padding-top: 10rpx;
}
.list-phone{
    padding-left: 20rpx;
}
.list-edit {
    position: absolute;
    right: 30rpx;
    top: 52rpx;
    padding-left: 40rpx;
    color: #5a5a5a;
    background: url('data:image/png;base64,') no-repeat 0 center/26rpx 26rpx;
}

.list-on::after {
    margin-left: 20rpx;
    padding: 0 8rpx;
    border-radius: 10rpx;
    content: '默认';
    color: #fff;
    background: #3C93FF;
}


/* 按钮 */

.btn {
    position: fixed;
    bottom: 65rpx;
    left: 30rpx;
    opacity: 0.7;
    border-radius: 6rpx;
    width: 690rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    background: #3C93FF;
}