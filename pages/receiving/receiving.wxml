<view class="item">
  <view class="item-name">联系人</view>
  <input type="text" placeholder="收货人姓名" class="item-input"/>
</view>
<view class="item">
  <view class="item-name">联系方式</view>
  <input type="text" placeholder="收货人手机号" class="item-input"/>
</view>
<view class="item">
  <view class="item-name">地区</view>
  <view class="item-input" bindtap="site">选择省/市/区</view>
</view>
<view class="item">
  <view class="item-name">收货地址</view>
  <input type="text" placeholder="详细楼号/门牌号/楼层" class="item-input"/>
</view>


<!-- 设置默认地址 -->
<view class="item item-default" wx:if="{{bol}}">
  <view class="item-site">设置为默认地址</view>
  <van-switch checked="{{ checked }}" bind:change="onChange" custom-class="item-btn"/>
</view>
<!-- 删除 -->
<view class="item-del">删除</view>

<navigator class="btn" url="../receivingList/receivingList" wx:if="{{bol}}">保存地址</navigator>
<navigator class="btn" url="../receivingList/receivingList" wx:else>保存地址</navigator>
<van-popup show="{{ show }}" position="bottom" custom-class="site">
  <van-area area-list="{{ areaList }}" bind:cancel="onClose"/>
</van-popup>
