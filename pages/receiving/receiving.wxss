page {
    background: #f7f8f9;
}

.item {
    display: flex;
    padding: 30rpx;
    border-top: 1rpx solid #e5e5e5;
    background: #fff;
}

.item-name {
    width: 175rpx;
    font-size: 14px;
    color: #333;
}

.item-input {
    flex: 1;
    font-size: 13px;
    color: #999;
}


/* 设置默认 */

.item-default {
    position: relative;
    width: 750rpx;
}


/* 删除 */

.item-del {
    position: absolute;
    right: 30rpx;
    top: 450rpx;
    padding: 1rpx 0 1rpx 40rpx;
    font-size: 13px;
    color: #3C93FF;
    background: url('data:image/png;base64,') no-repeat 0 center/28rpx 28rpx;
}

.item-btn {
    position: absolute!important;
    top: 17rpx;
    right: 100rpx;
}

.site {
    width: 750rpx;
}

.btn {
    position: fixed;
    bottom: 65rpx;
    left: 30rpx;
    opacity: 0.7;
    border-radius: 6rpx;
    width: 690rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    background: #3C93FF;
}