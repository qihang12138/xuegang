.seller-header {
    padding: 25rpx 30rpx;
    border-top: 1rpx solid #f5f5f5;
}

.header-img {
    margin-right: 35rpx;
    border-radius: 50%;
    height: 130rpx;
    width: 130rpx;
}

.header-id {
    padding-top: 10rpx;
    font-size: 14px;
    color: #8c8c8c;
}


/* 我的资金 */

.capital {
    margin: 5rpx 0;
    padding-top: 20rpx;
    background: #fff;
}

.capital-cont {
    text-align: center;
}

.money {
    margin-top: 15rpx;
    padding-bottom: 40rpx;
    font-size: 30px;
}


/* 订单管理 */

.order {
    margin-bottom: 5rpx;
    background: #fff;
}

.order-tit {
    padding: 25rpx 30rpx;
}

.order-classify {
    padding: 30rpx 0;
    font-size: 12px;
}

.order-img {
    padding-bottom: 15rpx;
    height: 65rpx;
    width: 65rpx;
}

.flex-item {
    text-align: center;
}


/* 选项 */

.options {
    flex-wrap: wrap;
    padding-bottom: 90rpx;
    background: #fff;
}

.option {
    padding-top: 54rpx;
    text-align: center;
    width: 249rpx;
    height: 225rpx;
    font-size: 14px;
}

.border-right {
    border-right: 1px solid #f5f5f5
}

.option-img {
    padding-bottom: 10rpx;
    height: 66rpx;
    width: 66rpx;
}