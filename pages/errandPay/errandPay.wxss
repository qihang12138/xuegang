.header {
    padding: 20rpx;
    border-radius: 10rpx;
    height: 180rpx;
    color: #fff;
    background: url('https://s2.ax1x.com/2019/07/31/etXSYD.png') no-repeat 0/690rpx 180rpx;
}

.header-tit {
    text-align: right;
}

.header-item {
    margin: -20rpx 0 0 80rpx;
    text-align: center;
}

.header-money {
    font-size: 20px;
    font-weight: 500;
}


/* 会员等级 */

.grade {
    padding-bottom: 35rpx;
    margin-bottom: 20rpx;
}

.grade-tit {
    font-weight: bold;
}

.msg {
    padding: 40rpx 30rpx;
    margin: 0 30rpx;
    border-radius: 10rpx;
    color: #fff;
    background: url('https://s2.ax1x.com/2019/07/31/etXSYD.png')no-repeat 0/690rpx 350rpx;
}

.msg-img {
    padding-right: 15rpx;
    border-radius: 50%;
    height: 80rpx;
    width: 80rpx;
}

.msg-name {
    font-size: 14px;
    padding-bottom: 8rpx;
}

.msg-time,
.msg-grade {
    font-size: 12px;
}

.msg-grade {
    display: inline-block;
    padding: 0 9rpx;
    border-radius: 10rpx;
    margin-left: 20rpx;
    background: #FCC543;
}

.custom-box {
    padding: 70rpx 0 0 50rpx;
}

.custom {
    opacity: 1!important;
    width: 300rpx;
}

.custom-button {
    padding: 0 8rpx;
    border-radius: 15rpx;
    font-size: 18rpx;
    color: #876226;
    background: #fff;
}

.custom-text {
    margin-top: -5rpx;
    padding-left: 15rpx;
    font-size: 18rpx;
}

.custom-num {
    padding-top: 70rpx;
    font-size: 14px;
    color: #876226;
}


/* 充值 */

.pay-input {
    margin: 20rpx 0;
}


/* 提示 */

.hint {
    padding: 40rpx 80rpx;
    text-align: center;
    font-size: 12px;
    color: #8c8c8c;
}