<!-- 地址 -->
<view class="location">
  <navigator url="">
    <view class="location-site">郑州</view>
  </navigator>
  <navigator class="delivery" url="">
    <text>还未选择配送地点</text>
    <text>[切换]</text>
  </navigator>
</view>
<!-- 轮播图 -->
<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{true}}" class="swiper">
  <block wx:for="{{pageData.lot_banner}}" wx:key="index">
    <swiper-item>
      <navigator url="">
        <image src="{{item.image}}" class="slide-image"/>
      </navigator>
    </swiper-item>
  </block>
</swiper>
<!-- 搜索商品 -->
<input type="text" placeholder="搜索商品" class="search" />
<!-- 分类栏 -->
<view class="sort">
  <view class="sort-son" wx:for="{{pageData.lot_type}}" wx:key="index">
    <navigator url="">
      <image src="{{item.type_image}}" class="sort-img" />
      <view>{{item.type_name}}</view>
    </navigator>
  </view>
</view>
<!-- 公告栏 -->
<van-notice-bar
  left-icon="volume"
  text="{{pageData.announcement[0].desc}}"
/>
<!-- 广告图 -->
<navigator url="">
  <image class="banner" src="{{pageData.alone_brand.img}}" />
</navigator>
<!-- 店铺推荐 -->
<view class="shop">
  <view class="shop-header">
    <view class="line"></view>
    <view class="shop-tit">店铺首推</view>
    <view class="line"></view>
  </view>
  <view class="shop-hint">今日店铺首推爆款 赶紧抢购吧</view>
  <navigator url="">
    <image class="shop-img" src="{{pageData.alone_brand.img}}" />
  </navigator>
</view>
<!-- 爆款团购 -->
<view class="hot">
  <view class="shop-header">
    <view class="line"></view>
    <view class="shop-tit">爆款团购</view>
    <view class="line"></view>
  </view>
  <view class="shop-hint">各种品类商品 优美价廉 赶紧抢购吧</view>
  <view class="commoditys">
    <block wx:for="{{pageData.group_pay_goods}}" wx:key="index">
      <commodity src="{{item.g_image}}" name="{{item.g_name}}" weight="{{item.g_amount}}" priceNew="{{item.g_xprice}}" priceOld="{{item.g_yprice}}"></commodity>
    </block>
  </view>
  
    
</view>