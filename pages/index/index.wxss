page {
    background: #f7f7f7;
}

.location {
    display: flex;
    padding: 20rpx 25rpx;
    font-size: 13px;
    color: #999;
    border-top: 1rpx solid #e6e6e6;
    background: #fff;
}

.location-site {
    padding-left: 40rpx;
    height: 37rpx;
    background: url('data:image/png;base64,') no-repeat 0 0/37rpx 37rpx;
}


/* 轮播图 */

.delivery {
    flex: 1;
    text-align: right;
    color: #3C93FF;
}

.swiper,
.slide-image {
    height: 320rpx;
    width: 750rpx;
}


/* 搜索商品 */

.search {
    padding: 14rpx 30rpx;
}

.van-cell {
    padding: 10rpx 20rpx!important;
    border-radius: 10rpx;
}


/* 会员 */

.vip {
    padding: 20rpx 30rpx;
    margin-bottom: 20rpx;
}

.vip-img {
    width: 690rpx;
    height: 138rpx;
}


/* 分类栏 */

.sort {
    display: flex;
    padding: 30rpx;
    background: #fff;
    margin-bottom: 20rpx;
}

.sort-son {
    flex: 1;
    text-align: center;
}

.sort-img {
    width: 82rpx;
    height: 82rpx;
    border-radius: 50%;
}


/* 广告图 */

.banner {
    margin: 20rpx 0;
    width: 750rpx;
    height: 200rpx;
}


/* 店铺推荐 */

.shop,
.hot {
    margin-bottom: 20rpx;
    background: #fff;
}

.shop {
    text-align: center;
}

.shop-header {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 30rpx 30rpx 0;
}

.line {
    flex: 1;
    height: 1rpx;
    background: #b3b3b3;
}

.shop-tit {
    padding: 9rpx 61rpx;
    margin: 0 20rpx;
    font-size: 15px;
    color: #333;
    border: 1rpx solid #f0f0f0;
    border-radius: 10rpx;
}

.shop-hint {
    margin: 10rpx 0 30rpx 0;
    text-align: center;
    font-size: 12px;
    color: #8c8c8c;
}

.shop-img {
    width: 660rpx;
    height: 590rpx;
}


/* 爆款团购 */

.hot {
    font-size: 14px;
    color: #333;
}