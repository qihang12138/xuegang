.task {
    margin: 20rpx 0 40rpx;
    font-size: 15px;
}


/* 规则 */

.rule {
    padding: 0 85rpx;
    text-align: center;
    font-size: 12px;
}


/* 任务进度 */

.task-item {
    position: relative;
    padding: 40rpx 30rpx;
}

.task-line {
    padding-bottom: 10rpx;
}

.task-btn {
    position: absolute;
    bottom: 30rpx;
    right: 40rpx;
    padding: 10rpx 15rpx;
    border: 1rpx solid #ccc;
    border-radius: 10rpx;
    font-size: 14px;
}