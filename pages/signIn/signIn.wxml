<view class="list">
    <input type="text" placeholder="请输入手机号" class="list-input color-8c border-bottom" value="" bindinput="tel"/>
    <view class="flex-box border-bottom list-item flex-align">
        <input type="text" placeholder="验证码" class="list-code flex-item" bindinput="code"/>
        <view class="list-btn">获取验证码</view>
    </view>
    <input type="text" placeholder="输入密码" class="list-input color-8c border-bottom" bindinput="pwd"/>
    <input type="text" placeholder="确认密码" class="list-input color-8c border-bottom" bindinput="pwdVerify"/>
</view>
<!-- 按钮 -->
<view class="fixed-bottom">
    <button class="my-btn">确定</button>
</view>
<!-- 弹出层 -->
<van-action-sheet show="{{ bol }}" actions="{{ actions }}" bind:close="onClose" bind:select="onSelect" title="请选择身份" />