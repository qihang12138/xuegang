page {
    height: 100%;
}


/* 商品列表 */

.commodity {
    margin-top: 20rpx;
    height: 100%;
}

.commodity-list {
    width: 750rpx;
    height: 100%;
    align-items: stretch;
}

.commodity-breviary {
    flex: 1;
    align-items: stretch;
}

.commodity-kind {
    flex: 1;
    width: 750rpx;
    min-height: 100%;
    background: #fff;
}


/* 商品内容 */

.commodity-cont {
    display: flex;
    padding: 20rpx 40rpx 12rpx 30rpx;
    background: #fff;
}

.commodity-img {
    margin-right: 30rpx;
    border-radius: 10rpx;
    width: 140rpx;
    height: 140rpx;
}

.commodity-msg {
    flex: 1;
}

.commodity-name {
    height: 100rpx;
    line-height: 30rpx;
    font-size: 14px;
    color: #333;
}

.commodity-text {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
    max-width: 320rpx;
}

.commodity-price {
    font-size: 15px;
    font-weight: 500;
    color: #ff3824;
}

.commodity-brand {
    text-align: center;
    line-height: 88rpx;
    width: 186rpx;
    height: 88rpx;
}

.on {
    background: #fff;
}