.search {
    display: flex;
    padding: 0 30rpx;
    margin: 15rpx 0 20rpx;
    font-size: 15px;
}

.search-input {
    padding: 16rpx 50rpx;
    width: 490rpx;
    height: 28rpx;
    border-radius: 10rpx 0 0 10rpx;
    background: #fff;
}

.search-btn {
    width: 100rpx;
    border-radius: 0 10rpx 10rpx 0;
    background: url('data:image/png;base64,') no-repeat center/44rpx 44rpx #fff;
}

.search-btn::after {
    border: none;
}


/* 商品列表 */

.commodity-list {
    width: 750rpx;
}

.commodity-breviary {
    flex: 1;
}

.commodity-kind {
    flex: 1;
    background: #fff;
}


/* 商品内容 */

.commodity-cont {
    display: flex;
    padding: 20rpx 40rpx 12rpx 30rpx;
}

.commodity-img {
    margin-right: 30rpx;
    border-radius: 10rpx;
    width: 140rpx;
    height: 140rpx;
}

.commodity-msg {
    flex: 1;
}

.commodity-name {
    height: 100rpx;
    line-height: 30rpx;
    font-size: 14px;
    color: #333;
}
.commodity-text{
    max-width: 320rpx;
}

.commodity-price {
    font-size: 15px;
    font-weight: 500;
    color: #ff3824;
}

.commodity-brand {
    text-align: center;
    line-height: 88rpx;
    width: 186rpx;
    height: 88rpx;
}

.on {
    background: #fff;
}