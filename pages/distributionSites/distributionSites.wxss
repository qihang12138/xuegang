.hint {
    padding: 20rpx 0;
    text-align: center;
    font-size: 14px;
    color: #333;
}


/* 配送点 */

.list {
    background: #fff;
}

.list-item {
    position: relative;
    padding: 30rpx;
    border: 1rpx solid #f5f5f5;
    font-size: 14px;
}

.list-item-name {
    width: 500rpx;
    padding-left: 55rpx;
    background: url('data:image/png;base64,') no-repeat 0 center/32rpx 32rpx;
}

.list-item-right {
    position: absolute;
    right: 30rpx;
    top: 40rpx;
    text-align: center;
}

.list-item-site {
    width: 480rpx;
    padding: 15rpx 0 0 55rpx;
    font-size: 12px;
    color: #8c8c8c;
}

.list-item-btn {
    padding: 0;
    margin-top: 10rpx;
    width: 96rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 13px;
    background: #3C93FF;
    color: #fff;
}