/**app.wxss**/

page {
    background: #f5f5f5;
    color: #333;
}

.box-sizing {
    box-sizing: border-box;
}

.p30 {
    padding: 30rpx;
}

.m10 {
    margin: 10rpx 0;
}
.text-hide{
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.fixed-bottom {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;
}

.my-btn {
    color: #fff;
    background: #3C93FF;
    opacity: .7;
}

.my-btn-danger {
    background: red;
}

.flex-box {
    display: flex;
}

.flex-center {
    align-items: center;
    justify-content: center;
}

.flex-align {
    align-items: center;
}

.flex-right {
    text-align: right;
}

.flex-item {
    flex: 1;
}

.border-bottom {
    border-bottom: 1rpx solid #f5f5f5;
}

.border-right {
    border-right: 1px solid #f5f5f5
}

.bg-fff {
    background: #fff;
}

.margin-top {
    margin-top: 20rpx;
}

.font-14 {
    font-size: 14px;
}

.font-12 {
    font-size: 12px;
}

.color-8c {
    color: #8c8c8c;
}


/* 重置vant样式 */

.van-tabs__line {
    background-color: #3C93FF!important;
}