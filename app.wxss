}

.p30 {
    padding: 30rpx;
}

.fixed-bottom {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;
}

.my-btn {
    color: #fff;
    background: #3C93FF;
    opacity: .7;
}

.my-btn-danger {
    background: red;
}

.flex-box {
    display: flex;
}

.flex-item {
    flex: 1;
}

.border-bottom {
    border-bottom: 1rpx solid #f5f5f5;
}

.bg-fff {
    background: #fff;
}

.margin-top {
    margin-top: 20rpx;
}


